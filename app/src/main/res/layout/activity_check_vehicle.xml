<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkVehicle">

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="220dp"
        android:layout_height="169dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/appimage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/appName"
        android:text="Scan Tow &amp; Track"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appImage"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your vehicle number?"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        android:layout_marginTop="80dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/vehicleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your vehicle number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textNumber"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/checkForTowing"
        android:onClick="checkForTow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vehicleNumber"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>